<?xml version="1.0" encoding="utf-8"?>
<!--
    Archivo: AndroidManifest.xml
    Descripción:
    Manifiesto principal de la aplicación "Gestor de Horarios y Clases".
    Contiene la definición de las actividades, iconos, reglas de respaldo
    y configuración general del proyecto Android.
-->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
        Configuración global de la aplicación.
        Incluye nombre, iconos, soporte RTL, tema, y reglas de backup.
    -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestorDeHorariosYClases">

        <!--
            Activity principal (pantalla de inicio).
            Es el punto de entrada de la app (MAIN + LAUNCHER).
        -->
        <activity
            android:name=".HomeScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            Actividades secundarias del sistema.
            Cada una corresponde a una sección funcional de la app.
        -->
        <activity android:name=".RegistroClasesActivity" />
        <activity android:name=".ListaClasesActivity" />
        <activity android:name=".AgregarTareaActivity" />
        <activity android:name=".ListaTareasActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".PerfilActivity" />

    </application>

</manifest>
