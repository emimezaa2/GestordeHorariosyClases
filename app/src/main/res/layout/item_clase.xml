<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/fondo_tarjeta"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewColorClase"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#6200EE" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNombreClase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matemáticas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/texto_principal" />

            <TextView
                android:id="@+id/tvProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prof. Juan Pérez"
                android:textSize="12sp"
                android:textColor="@color/texto_secundario"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvSalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salón A-1"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/texto_secundario"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lun 08:00 - 10:00"
                android:textSize="12sp"
                android:textColor="#6200EE"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#F44336"
            android:scaleType="centerInside"
            android:contentDescription="Eliminar clase" />

    </LinearLayout>
</androidx.cardview.widget.CardView>