<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: item_tarea.xml
    Descripción:
    Vista individual que representa una tarea o examen dentro del RecyclerView.
    Muestra tipo, nombre, materia, fecha de entrega y prioridad mediante un color lateral.
    Incluye un checkbox para marcar como completada y un botón para eliminar la tarea.
-->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/fondo_tarjeta"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Contenedor principal horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Barra lateral con color según prioridad -->
        <View
            android:id="@+id/viewPrioridadColor"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#4CAF50" />

        <!-- Contenedor de información de la tarea -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tipo (Tarea / Examen) + Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Tipo de actividad -->
                <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAREA"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="#F0F0F0"
                    android:layout_marginEnd="8dp" />

                <!-- Nombre de la tarea -->
                <TextView
                    android:id="@+id/tvNombreTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título Tarea"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/texto_principal" />
            </LinearLayout>

            <!-- Materia + Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Nombre de la materia -->
                <TextView
                    android:id="@+id/tvMateria"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Materia"
                    android:textColor="@color/texto_secundario" />

                <!-- Fecha de entrega -->
                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textStyle="bold"
                    android:textColor="#6200EE" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contenedor del CheckBox de completado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completar"
                android:textSize="10sp"
                android:textColor="@color/texto_secundario" />

            <!-- CheckBox de estado -->
            <CheckBox
                android:id="@+id/checkBoxFinal"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:buttonTint="@color/purple_500"
                android:scaleX="1.2"
                android:scaleY="1.2" />
        </LinearLayout>

        <!-- Botón de eliminar tarea -->
        <ImageButton
            android:id="@+id/btnEliminarTarea"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#F44336"
            android:contentDescription="Eliminar tarea"
            android:padding="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
